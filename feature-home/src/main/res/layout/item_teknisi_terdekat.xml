<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="@dimen/_140sdp"
    android:layout_margin="@dimen/medium"
    android:layout_weight="1"
    android:clickable="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_teknisi"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:contentDescription="Teknisi"
            android:background="@color/colorBattleshipGrey"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_teknisi_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:padding="@dimen/medium"
            tools:text="Curabitur tempus"
            android:textColor="@color/colorBattleshipGrey" />

    </LinearLayout>

</androidx.cardview.widget.CardView>