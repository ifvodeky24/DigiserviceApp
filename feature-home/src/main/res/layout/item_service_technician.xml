<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="8dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.example.core_util.DigiTextView
            android:id="@+id/tv_service_hp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorTextPrimary"
            android:textSize="18sp"
            app:digi_font_style="medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Suspendisse ornare" />

        <TextView
            android:id="@+id/tv_service_hp_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_service_hp_name"
            tools:text="Adipiscing" />

        <TextView
            android:id="@+id/tv_service_hp_damage_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_service_hp_type"
            tools:text="Adipiscing" />

        <ImageView
            android:id="@+id/iv_service_costumer_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/shape_circle_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>