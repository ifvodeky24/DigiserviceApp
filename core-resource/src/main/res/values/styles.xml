<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.DigiServices.Button.Secondary" parent="">
        <item name="colorPrimary">@color/colorCobaltBlue</item>
    </style>

    <style name="Widget.DigiService.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.DigiServices.Button.Secondary</item>
        <item name="cornerRadius">@dimen/small</item>
    </style>
    <style name="Widget.DigiService.Spinner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="endIconTint">@color/colorGreyishBrown</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/colorLightBlueGrey</item>
    </style>
    <style name="ThemeLayoutHorizontal">
        <item name="android:paddingLeft">@dimen/medium</item>
        <item name="android:paddingRight">@dimen/medium</item>
    </style>
    <style name="ThemeLayoutVertical">
        <item name="android:paddingBottom">@dimen/medium</item>
        <item name="android:paddingTop">@dimen/medium</item>
    </style>

    <style name="ThemeMarginHorizontal">
        <item name="android:layout_marginLeft">@dimen/medium</item>
        <item name="android:layout_marginRight">@dimen/medium</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
</resources>